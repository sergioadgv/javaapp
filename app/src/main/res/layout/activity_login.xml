<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="false"
    android:background="@drawable/my_background_fade">


    <ProgressBar
        android:id="@+id/progress_ber"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone">

    </ProgressBar>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_350sdp"
        android:layout_margin="0dp"
        android:fadingEdge="horizontal"
        android:padding="0dp"
        app:srcCompat="@drawable/talulatorsologin"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_350sdp"
        android:layout_margin="0dp"
        android:fadingEdge="horizontal"
        android:padding="0dp"
        app:srcCompat="@drawable/wasmetorsologin"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:fadingEdge="horizontal"
        android:padding="0dp"
        app:srcCompat="@drawable/chamiwalking" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/_50sdp"
        android:paddingEnd="@dimen/_50sdp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|center"

            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            app:srcCompat="@drawable/logowasmetransparent"></ImageView>

        <!-- and

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/roboto"
            android:text="@string/sign_in_with_username"
            android:textColor="@color/textcolor"
            android:typeface="monospace">

        </TextView>
        -->
        <EditText
            android:id="@+id/edt_user_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/back_ground_shap"
            android:fontFamily="casual"
            android:hint="@string/username"
            android:padding="5dp"
            android:textColorHint="@color/colorPrimaryDark">

        </EditText>

        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/edt_pass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/back_ground_shap"
                android:fontFamily="casual"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textColorHint="@color/colorPrimaryDark">

            </EditText>

            <ImageView
                android:id="@+id/show_pass"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                app:srcCompat="@drawable/hide">

            </ImageView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ck_box_trams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFF"/>

            <TextView
                android:id="@+id/txt_trams"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="casual"
                android:text="I have read and agree with the Terms and Conditions"
                android:textColor="@color/textcolor"
                android:layout_marginBottom="@dimen/_10sdp"                >

            </TextView>

        </LinearLayout>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="198dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/my_button_bg"
            android:fontFamily="casual"
            android:text="@string/sign_in"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:shadowColor="#ffff"
            android:shadowRadius="2">

        </Button>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/my_button_bg"
            android:fontFamily="casual"
            android:text="@string/sign_up"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:shadowColor="#ffff"
            android:shadowRadius="2">

        </Button>

        <Button
            android:id="@+id/btn_demo"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/my_button_bg"
            android:fontFamily="casual"
            android:text="Demo"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:shadowColor="#ffff"
            android:shadowRadius="2">

        </Button>
        <TextView
            android:id="@+id/txt_forgot_pass"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:padding="@dimen/_10sdp"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:text="Forgot password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:fadingEdge="horizontal"
            android:padding="0dp"
            app:srcCompat="@drawable/galalogin" />


    </LinearLayout>


</RelativeLayout>