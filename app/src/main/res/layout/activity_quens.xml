<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuensActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/top_bar"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24">

            </ImageView>
            <TextView
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textSize="25sp"
                android:textColor="#FFFF"
                android:text="Test your Knowledge!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual">

            </TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/qus_num"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#000"
                android:text="Question no: 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/total_qus_num"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#000"
                android:text="Total Question "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:id="@+id/quens_image"
                android:layout_width="match_parent"
                android:layout_height="160dp">
            </ImageView>


            <TextView
                android:fontFamily="@font/roboto"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:textSize="25sp"
                android:id="@+id/txt_quens"
                android:text="What is the quens?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <RadioGroup
                android:id="@+id/option_group"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:textSize="20dp"
                    android:buttonTint="#000"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:id="@+id/option_1"
                    android:text="Option 1 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </RadioButton>
                <RadioButton
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:buttonTint="#000"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:id="@+id/option_2"
                    android:text="Option 1 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </RadioButton>
                <RadioButton
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:buttonTint="#000"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:id="@+id/option_3"
                    android:text="Option 1 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </RadioButton>
                <RadioButton
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:buttonTint="#000"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:id="@+id/option_4"
                    android:text="Option 1 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </RadioButton>
            </RadioGroup>

            <Button
                android:fontFamily="@font/roboto_bold"
                android:textColor="#000"
                android:text="@string/next"
                android:id="@+id/btn_ans"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buton_back"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Button>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>