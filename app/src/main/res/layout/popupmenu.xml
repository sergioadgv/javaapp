<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/menu_background"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/logowasmetransparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:gravity="right">

                <Button
                    android:id="@+id/close_Menu"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:onClick="onClickCloseMenu"
                    android:layout_margin="10dp"
                    android:background="@drawable/my_button2"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:fontFamily="@font/fontdiner_swanky"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >

                <Button
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Wasme"
                    android:onClick="onClickWasme"
                    android:layout_margin="15dp"
                    android:background="@drawable/my_button2"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:fontFamily="@font/fontdiner_swanky"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <Button
                    android:id="@+id/nav_shop_sticker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Go to Shop"
                    android:onClick="onClickShop"
                    android:layout_margin="15dp"
                    android:background="@drawable/my_button2"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:fontFamily="@font/fontdiner_swanky"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top"
                android:orientation="vertical">

                <Button
                    android:id="@+id/nav_my_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Profile"
                    android:onClick="onClickProfile"
                    android:layout_margin="15dp"
                    android:background="@drawable/my_button2"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:fontFamily="@font/fontdiner_swanky"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top"
                android:orientation="vertical">

                <Button
                    android:id="@+id/logout_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:onClick="onClickLogout"
                    android:layout_margin="15dp"
                    android:background="@drawable/my_button2"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:fontFamily="@font/fontdiner_swanky"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>